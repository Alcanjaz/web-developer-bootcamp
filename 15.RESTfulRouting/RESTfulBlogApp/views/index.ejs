<%include ./partials/header%>

<div class="ui container">
<h1>THIS IS THE CAT BLOG</h1>

<div class="ui link cards">
    <% blogs.forEach(blog => {%>
        <div class="card">
            <div class="image">
                <img src="<%= blog.image%>">
            </div>
            <div class="content">
                <h2 class="header"><%=blog.title%></h2>
                <div class="meta">
                    <span class="date"><%=blog.created.toDateString()%></span>
                </div>
                <div class="description">
                    <p><%= blog.body.substring(0,100)%>...</p>    
                </div>
            </div>
            <div class="extra content">
                <a class="ui violet button" href="/blogs/<%=blog._id%>">Read More!</a>
            </div>
        </div>
    <%})%>
</div>

</div>


<%include ./partials/footer%>